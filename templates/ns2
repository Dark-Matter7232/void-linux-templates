# Template file for spotify-adblock
pkgname=ns2
version=2.35
revision=1
short_desc="Discrete event simulator targeted at networking research"
maintainer="Dark-Matter7232 <anuragrai4484@gmail.com>"
license="GPL-3.0-only"
homepage="https://www.isi.edu/nsnam/ns/"
depends="tk tcl"
do_install() {
        local _bin="http://archive.ubuntu.com/ubuntu/pool/universe/n/ns2/ns2_2.35+dfsg-3.1_amd64.deb"
        $XBPS_FETCH_CMD ${_bin}
        ar x ns2_2.35+dfsg-3.1_amd64.deb
	bsdtar -xf data.tar.xz
        vmove usr/ usr-2/                               
	vmkdir usr/share/doc/ns2
        vmkdir usr/share/lintian/overrides
        vcopy usr-2/share/lintian/overrides/ns2 usr/share/lintian/overrides/
        vman usr-2/man/share/man1
        vcopy usr-2/share/doc/ns2/ usr/share/doc/ns2
        vbin bin/calcdest
	vbin bin/dec-tr-stat
	vbin bin/epa-tr-stat
        vbin bin/nlanr-tr-stat
        vbin bin/ns
        vbin bin/nse
        vbin bin/nstk
        vbin bin/setdest
        vbin bin/ucb-tr-stat
}
