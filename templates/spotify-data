Template file for 'spotify'
pkgname=spotify-data
version=1.1.56
revision=1
_ver="${version}.595.g2d2da0de_amd64"
_filename="spotify-client_${_ver}.deb"
archs="x86_64"
create_wrksrc=yes
build_style=fetch
hostmakedepends="curl w3m libcurl"
depends="GConf libcurl"
short_desc="Proprietary music streaming client"
maintainer="Stefan MÃ¼hlinghaus <jazzman@alphabreed.com>"
license="custom:Proprietary"
homepage="https://www.spotify.com"
distfiles="http://repository.spotify.com/pool/non-free/s/spotify-client/${_filename}"
checksum=eee658c4ce875e4646c2ef617832a9dbb3ad09ba1b7aeeaaf3476b7b00b833d1
nostrip=yes

do_build() {
	ar x "${_filename}"
	bsdtar -xf data.tar.gz
        rm -rf usr/share/spotify/apt-keys 
        rm -rf usr/share/spotify/libGLESv2.so
        rm -rf usr/share/spotify/cef.pak                 
        rm -rf usr/share/spotify/libcef.so
        rm -rf usr/share/spotify/cef_100_percent.pak     
        rm -rf usr/share/spotify/locales
        rm -rf usr/share/spotify/cef_200_percent.pak     
        rm -rf usr/share/spotify/snapshot_blob.bin
        rm -rf usr/share/spotify/cef_extensions.pak      
        rm -rf usr/share/spotify/spotify
        rm -rf usr/share/spotify/devtools_resources.pak  
        rm -rf usr/share/spotify/spotify.desktop
        rm -rf usr/share/spotify/icons                   
        rm -rf usr/share/spotify/swiftshader
        rm -rf usr/share/spotify/icudtl.dat              
        rm -rf usr/share/spotify/v8_context_snapshot.bin
}

do_install() {
	vcopy usr/share/spotify usr/libexec/ 
}
